{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "Build",
            "command": "npm",
            "isShellCommand": true,
            "args": ["run", "build"],
            "showOutput": "always",
            "problemMatcher": "$tsc",
            "isBuildCommand": true
        },
        {
            "taskName": "Test",
            "command": "npm",
            "isTestCommand": true,
            "args": ["run", "test"],
            "isShellCommand": true,
            "showOutput": "always"
        }
    ]
}
