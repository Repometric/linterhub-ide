{
    "version": "1.6.2",
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "declaration": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../js"
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./proxy.ts",
        "./platform.ts",
        "./index.ts",
        "./util.ts",
        "./linterhub-installer.ts",
        "./linterhub-cli.ts"
    ]
}
